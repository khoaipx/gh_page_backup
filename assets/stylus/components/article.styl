// progress bar
.progress-bar
	position fixed
	top 0
	left 0
	width 100%
	background #fff
	z-index 11
	.bar
		height 3px
		width 0
		background blue
		background linear-gradient(to left, blue, #00d2ff)

// article
.article-buttons
	+above(md)
		position sticky
		position -webkit-sticky
		top 110px
	.social-links
		position relative
		+above(md)
			top 8px
			li
				text-align center
			li:not(:last-child)
				margin-bottom 15px

		+below(md)
			display flex
			li
				&:not(:last-child)
					margin-right 15px
		a
			font-size 20px
			color #555

// article wrapper
.article-wrapper
	padding 80px 0
	+below(md)
		padding 60px 0

	.subscribe-form
		margin-bottom 80px
		padding 40px
		box-shadow 0 10px 20px 0 rgba(0,0,0,.1)
		border 1px solid #f5f5f5

		+above(sm)
			.input-wrapper
				display inline-flex
				width 100%
				margin-top 10px
			[type="email"]
				margin-bottom 0
				margin-right 10px
			[type="submit"]
				width 50%

// article header
.article-header
	margin-bottom 60px
	position relative
	&:after
		content ''
		height 2px
		background #ddd
		width 10%
		display block
		margin-top 30px

	.subtitle
		margin 15px 0

article
	margin-bottom 50px

	.profile
		width 100px
		display block
		margin auto
		border-radius 50%

	.row
		img
			width 100%

	hr
		position relative
		margin 50px 0
		display block
		border-color #fff
		&:before
			content ''
			position absolute
			top 0
			width 50%
			left 50%
			transform translateX(-50%)
			height 1px
			background #eee

	p img
		max-width 100%
		display block
		margin 50px auto

	blockquote
		position relative
		p, ol, ul
			&:last-child
				margin-bottom 0
		padding 20px 50px
		+below(md)
			padding 20px
		p
			font-size 22px
			font-style italic
			font-weight 300

	ul, ol
		li
			position relative
			padding-left 20px
			&:not(:last-child)
				margin-bottom 5px

	ul li:before
		content ''
		square(5px)
		display block
		position absolute
		top 11px
		left 0
		background rgba(0,0,0,.75)
		border-radius 50%

	ol
		counter-reset number
		li	
			counter-increment number
			&:before
				content counter(number) '.'
				position absolute
				left 0

	h2, h3, h4
		&:not(:first-child)
			margin-top 50px
		margin-bottom 30px

	p, ul, ol, blockquote, h5
		&:not(:last-child)
			margin-bottom 30px

	.mt-small
		margin-top 20px !important

	pre
		background silver
		padding 20px

// tags list
.tags-list
	text-align left
	font-size 0
	li
		display inline-block
		margin-right 10px
		margin-bottom 10px
	a
		background #d5d5d5
		display block
		padding 7px 15px 10px 15px
		border-radius 20px
		color #555
		font-size 14px

// pagination
.custom-pagination
	margin-top 30px
	.pagination-list
		border-top 1px solid #ddd
		border-bottom 1px solid #ddd
		li:not(:last-child)
			border-right 1px solid #ddd
		a
			display block
			text-align center
			padding 15px 0

// box
.box
	padding 40px
	border-radius 15px
	+below(md)
		padding 25px
		border-radius 8px
	background #fff
	box-shadow 0 10px 20px 0 rgba(0,0,0,.1)
	border 1px solid #f5f5f5

	h4 a
		font-weight 400
